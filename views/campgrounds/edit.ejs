<%- include ('../includes/header') %>
<div class="container">
  <div class="row">
    <h1 style="text-align: center">Update <%= campground.name %></h1>
    <div style="width: 30%; margin: 25px auto">
      <form
        action="/campgrounds/<%= campground._id %>/?_method=PUT"
        method="post"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="campground[name]"
            value="<%= campground.name %>"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            name="campground[image]"
            value="<%= campground.image %>"
          />
        </div>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            name="campground[description]"
            value="<%= campground.description %>"
          />
        </div>
        <div class="form-group">
          <input
            type="number"
            class="form-control"
            name="campground[price]"
            placeholder="Price"
            min="0.01"
            step="0.01"
            value="<%= campground.price %>"
          />
        <div class="form-group" style="margin:3px;">
          <button type="submit" class="btn btn-primary btn-block">Edit</button>
        </div>
      </form>
      <a href="/campgrounds" class="btn btn-large">Go back</a>
    </div>
  </div>

  <%- include ('../includes/footer') %>
</div>
