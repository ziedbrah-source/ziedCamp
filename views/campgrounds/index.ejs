<%- include ('../includes/header') %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to ziedCamp</h1>
      <p>View all hand picked campgrounds from all over the world</p>
      <a href="/campgrounds/new" class="btn btn-primary btn-large"
        >Add a brand new campground</a
      >
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most beautifull campgrounds:</h3>
    </div>
  </div>
  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% campgrounds.forEach((campground)=>{ %>

    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= campground.image %>" alt="campground image" />
      </div>
      <div class="caption"><h4><%= campground.name %></h4></div>
      <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
        >More</a
      >
    </div>

    <% }) %>
  </div>
  <%- include ('../includes/footer') %>
</div>
